@model ClientWebApp.Models.AppUser


@{
    ViewBag.Title = "Approve/Reject Page";
}

<div class="panel panel-primary">
    <div class="panel-heading">User @Model.FirstName @Model.SecondtName @Model.Patronymic</div>
    <table class="table table-striped">
        <tr>
            <th>Property</th>
            <th>User</th>
        </tr>
        <tr>
            <td>ID</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td>Date of Birth</td>
            <td>@Model.DOB</td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <td>Place Of Work</td>
            <td>@Model.PlaceOfWork</td>
        </tr>
        <tr>
            <td>Job Position</td>
            <td>@Model.JobPosition</td>
        </tr>
        <tr>
            <td>Country</td>
            <td>@Model.Country</td>
        </tr>
        <tr>
            <td>City</td>
            <td>@Model.City</td>
        </tr>
        <tr>
            <td>Password</td>
            <td>@Model.RawPassword</td>
        </tr>
    </table>
</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.IsApprove)
    <button type="submit" class="btn btn-primary">Approve</button>
    @Html.ActionLink("Reject", "Reject", null, new { @class = "btn btn-danger" })
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}

